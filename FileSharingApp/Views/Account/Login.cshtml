@model FileSharingApp.Models.LoginViewModels

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>


<hr />
<div class="row justify-content-center text-center">
    <div class="col-md-4">
        @{
            if (TempData["Error"] != null)
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            }
        }
        <form asp-action="Login" asp-controller="Account" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]">

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-6 text-center">
        <a class="btn btn-outline-primary" asp-action="ExternalLogin" asp-controller="Account" asp-route-provider="Facebook">Login with <i class="fab fa-facebook-square"></i></a>
        <a class="btn btn-outline-danger" asp-action="ExternalLogin" asp-controller="Account" asp-route-provider="Google">Login with <i class="fab fa-google"></i></a>
    </div>
</div>
<div class="row justify-content-center py-4">
    <div class="col-6 text-center">
        <a class="btn btn-outline-primary" asp-action="ForgetPassword" asp-controller="Account">Forget Password</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
