@model FileSharingApp.Models.ChangePasswordViewModel
@inject IViewLocalizer Localizer



<div class="container">
    <div class="row text-center">
        @{
            if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center">
                    <strong>@TempData["Success"]</strong>
                </div>
            }
        }
    </div>
    <h2 class="text-center">@Localizer["ChangePassword"]</h2>

    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="ChangePassword" asp-controller="Account">
               
                <div class="form-group">
                    <input type="password" asp-for="CurrentPassword" class="form-control" placeholder="Current Password" />
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" asp-for="NewPassword" class="form-control" placeholder="New Password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" asp-for="ConfirmNewPassword" class="form-control" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Register" class="btn btn-outline-primary w-100" />
                </div>
            </form>
        </div>
    </div>

</div>