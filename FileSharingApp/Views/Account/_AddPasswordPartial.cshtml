@model FileSharingApp.Models.AddPasswordViewModel
@*@inject IViewLocalizer Localizer*@

<div class="container">
    <div class="row text-center">
        @{
            if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center">
                    <strong>@TempData["Success"]</strong>
                </div>
            }
        }
    </div>
    <h2 class="text-center">Add Password</h2>

    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="AddPassword" asp-controller="Account">

                <div class="form-group">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Change Password" class="btn btn-dark w-100" />
                </div>
            </form>
        </div>
    </div>

</div>