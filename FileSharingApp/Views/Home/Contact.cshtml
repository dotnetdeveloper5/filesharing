@model FileSharingApp.Models.ContactViewModel
@{
    ViewData["Title"] = "Contact";
}

@{
    if (TempData["Message"] != null)
    {
    <div class="text-center">
        <span class="alert alert-success text-center">
            @TempData["Message"];
        </span>
    </div>
    }
}
<section id="mu-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-contact-area">
                    <!-- Title -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mu-title">
                                <h2>Say Hello!</h2>
                                <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa cum sociis.</p>
                            </div>
                        </div>
                    </div>
                    <!-- Start Contact Content -->
                    <div class="mu-contact-content">
                        <div class="row">

                            <div class="col-md-12">
                                <div class="mu-contact-form-area">
                                    <div id="form-messages"></div>
                                    <form method="post" asp-action="Contact" class="mu-contact-form">

                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input type="text" class="form-control" placeholder="Name" id="name" asp-for="Name" required>
                                            <span asp-validation-for="Name"></span>
                                        </div>

                                        <div class="form-group">
                                            <span class="fa fa-envelope mu-contact-icon"></span>
                                            <input type="email" class="form-control" placeholder="Enter Email" id="email" asp-for="Email" required>
                                            <span asp-validation-for="Email"></span>
                                        </div>

                                        <div class="form-group">
                                            <span class="fa fa-folder-open-o mu-contact-icon"></span>
                                            <input type="text" class="form-control" placeholder="Your Subject" id="subject" asp-for="Subject" required>
                                            <span asp-validation-for="Subject"></span>
                                        </div>

                                        <div class="form-group">
                                            <span class="fa fa-pencil-square-o mu-contact-icon"></span>
                                            <textarea class="form-control" placeholder="Message" id="message" asp-for="Message" required></textarea>
                                            <span asp-validation-for="Message"></span>
                                        </div>
                                        <button type="submit" class="mu-send-msg-btn"><span>Send Message</span></button>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- End Contact Content -->
                </div>
            </div>
        </div>
    </div>
</section>

