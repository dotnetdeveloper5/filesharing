@model IEnumerable<FileSharingApp.Models.UploadViewModel>

@{
    ViewData["Title"] = "Results";
}

<h2>Search Results</h2>
<hr />
<div class="container">
    <div class="row">
        @foreach(var item in Model)
        {


<div class="card mb-3">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        @if (item.ContentType.ToLower().StartsWith("image")) 
                        { 
                            <img style="width:100%;height:100%" src="~/Uploads/@item.FileName" class="card-img" />
                        }
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@item.OriginalFileName</h5>
                            <p class="card-text"><small class="text-muted">@item.UploadDate</small></p>
                            <div class="text-right">
                                <a asp-controller="Uploads" asp-action="Download" asp-route-fileName="@item.FileName" class="btn btn-outline-dark">Download</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
